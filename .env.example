# Application Settings
APP_NAME=ATAK-Deploy
VERSION=1.0.0
APP_ENV=development  # development, production, test
DEBUG=True
SECRET_KEY=your-secret-key-here
PORT=8000

# Database Settings
DATABASE_URL=postgresql://atak_user:atak_password@localhost:5432/atak_db
ASYNC_DATABASE_URL=postgresql+asyncpg://atak_user:atak_password@localhost:5432/atak_db

# Redis Settings
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ATAK Server Settings
ATAK_SERVER_HOST=localhost
ATAK_SERVER_PORT=8089
ATAK_CERT_DIR=/opt/tak/certs
ATAK_FILES_DIR=/opt/tak/certs/files

# Superuser Settings (for initial setup)
CREATE_SUPERUSER=true
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=change-this-password

# SSL/TLS Settings
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_TIME=00:00  # UTC

# Railway Specific Settings
RAILWAY_STATIC_URL=
RAILWAY_ENVIRONMENT=
RAILWAY_PROJECT_ID=
RAILWAY_PROJECT_NAME=
